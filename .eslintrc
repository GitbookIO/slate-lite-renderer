{
    "parser": "babel-eslint",
    "extends": [
        "gitbook"
    ],
    "plugins": [
        "flowtype"
    ],
    "env": {
         "browser": true
    },
    "settings": {
        "import/resolver": {
            "babel-module": {}
        }
    },
    "rules": {
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true, "optionalDependencies": true, "peerDependencies": true}],
        "react/prop-types": [2, { skipUndeclared: true }]
    }
}
